<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Morado_parcial"
    android:fillViewport="true"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- LOGO DE LA APP -->
        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/parcial_logo" />

        <!-- NOMBRE DE LA APP -->
        <TextView
            android:id="@+id/txtNombreApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/Blanco"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- MENSAJE INSTRUCTIVO -->
        <TextView
            android:id="@+id/txtMensajeInstructivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:text="Completa el formulario para registrarte"
            android:textColor="@color/Blanco"
            android:textSize="16sp" />

        <!-- INPUT: NOMBRES -->
        <EditText
            android:id="@+id/edtNombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres"
            android:inputType="textPersonName"
            android:padding="10dp"/>

        <!-- INPUT: APELLIDOS -->
        <EditText
            android:id="@+id/edtApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:padding="10dp"/>

        <!-- INPUT: CORREO ELECTRÓNICO -->
        <EditText
            android:id="@+id/edtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="10dp"/>

        <!-- INPUT: TELÉFONO -->
        <EditText
            android:id="@+id/edtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone"
            android:padding="10dp"/>

        <!-- INPUT: CONTRASEÑA -->
        <EditText
            android:id="@+id/edtContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"/>

        <!-- INPUT: REPETIR CONTRASEÑA -->
        <EditText
            android:id="@+id/edtRepetirContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repetir Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"/>

        <!-- CHECKBOX: ACEPTAR TÉRMINOS -->
        <CheckBox
            android:id="@+id/chkTerminos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Acepto los términos y condiciones"
            android:textColor="@color/Blanco" />

        <!-- BOTÓN DE REGISTRO -->
        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton_redondeado_parcial"
            android:padding="10dp"
            android:text="Registrarme"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
