<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Imagen de perfil -->
    <ImageView
        android:id="@+id/imagenPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/personal"
        android:contentDescription="Imagen de perfil"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juan Sebastián"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/Morado_parcial"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imagenPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Correo del usuario -->
    <TextView
        android:id="@+id/correoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="juan@ejemplo.com"
        android:textSize="16sp"
        android:textColor="@color/Morado_parcial"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/nombreUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Botón de Editar Perfil -->
    <Button
        android:id="@+id/editarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/Morado_parcial"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/correoUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Botón de Cerrar sesión -->
    <Button
        android:id="@+id/cerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/Morado_parcial"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editarPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>
