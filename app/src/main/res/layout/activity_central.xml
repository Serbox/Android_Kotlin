<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Morado_parcial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="20dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icono_parcial_central"
            android:layout_width="310dp"
            android:layout_height="328dp"
            app:srcCompat="@drawable/parcial_logo" />

        <EditText
            android:id="@+id/edtPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su peso (kg)"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spinnerActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperatura ambiental promedio (C)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtConsumoLiquidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Consumo actual de líquidos (ml)"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Recomendación"
            android:background="@color/Morado_parcial"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumo recomendado: -"
            android:textSize="16sp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Datos"
            android:background="@color/Morado_parcial"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>