<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

        <!-- Titulo de productos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuestros Productos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/Morado_parcial"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Fila de productos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

                <!-- Producto 1 (Alexa) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/alexa"
                            android:contentDescription="Producto Alexa"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alexa"
                            android:textSize="16sp"
                            android:textColor="@color/Morado_parcial"
                            android:gravity="center"/>
                </LinearLayout>

                <!-- Producto 2 (Descansar) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/descansar"
                            android:contentDescription="Producto Descansar"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descansar"
                            android:textSize="16sp"
                            android:textColor="@color/Morado_parcial"
                            android:gravity="center"/>
                </LinearLayout>

                <!-- Producto 3 (Entrenar) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/entrenar"
                            android:contentDescription="Producto Entrenar"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrenar"
                            android:textSize="16sp"
                            android:textColor="@color/Morado_parcial"
                            android:gravity="center"/>
                </LinearLayout>
        </LinearLayout>

        <!-- Fila de productos  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

                <!-- Producto 4 (Para Trabajar) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/para_trabajar"
                            android:contentDescription="Producto Para Trabajar"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Para Trabajar"
                            android:textSize="16sp"
                            android:textColor="@color/Morado_parcial"
                            android:gravity="center"/>
                </LinearLayout>

                <!-- Producto 5 (Personal) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/personal"
                            android:contentDescription="Producto Personal"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal"
                            android:textSize="16sp"
                            android:textColor="@color/Morado_parcial"
                            android:gravity="center"/>
                </LinearLayout>
        </LinearLayout>

</LinearLayout>
